{
    "app-id": "com.example.TextExtractor",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.toolchain-i386",
        "org.freedesktop.Sdk.Extension.toolchain-aarch64",
        "org.freedesktop.Sdk.Extension.llvm18"
    ],
    "command": "text-extractor",
    "build-options": {
        "env": {
            "PATH": "/usr/lib/sdk/rust-stable/lib/rustlib/x86_64-unknown-linux-gnu/bin:/run/ccache/bin:/usr/lib/sdk/rust-stable/bin:/usr/bin:$PATH",
            "CARGO_HOME": "/run/build/text-extractor/cargo",
            "LIBCLANG_PATH": "/usr/lib/sdk/llvm18/lib",
            "C_INCLUDE_PATH": "/usr/include:/usr/lib/gcc/x86_64-unknown-linux-gnu/14.2.0/include:/usr/lib/sdk/toolchain-i386/lib/x86_64-linux-gnu/gcc/i686-unknown-linux-gnu/14.2.0/include",
            "CPATH": "/usr/include:/usr/lib/sdk/rust-stable/include",
            "SYSROOT": "/usr",
            "PKG_CONFIG_PATH": "/app/lib/pkgconfig:$PKG_CONFIG_PATH",
            "RUSTFLAGS": "-L native=/app/lib"
        }
    },
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "libjpeg-turbo",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_STATIC=ON",
                "-DENABLE_SHARED=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libjpeg-turbo/libjpeg-turbo/archive/refs/tags/3.0.1.tar.gz",
                    "sha256": "5b9bbca2b2a87c6632c821799438d358e27004ab528abf798533c15d50b39f82"
                }
            ]
        },
        {
            "name": "libpng",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.sourceforge.net/libpng/libpng-1.6.40.tar.xz",
                    "sha256": "535b479b2467ff231a3ec6d92a525906fb8ef27978be4f66dbe05d3f3a01b3a1"
                }
            ]
        },
        {
            "name": "libtiff",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.osgeo.org/libtiff/tiff-4.6.0.tar.gz",
                    "sha256": "88b3979e6d5c7e32b50d7ec72fb15af724f6ab2cbf7e10880c360a77e4b5d99a"
                }
            ]
        },
        {
            "name": "giflib",
            "buildsystem": "simple",
            "build-commands": [
                "make -j$(nproc)",
                "make install PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/giflib/files/giflib-5.2.1.tar.gz",
                    "sha256": "31da5562f44c5f15d63340a09a4fd62b48c45620cd302f77a6d9acf0077879bd"
                }
            ]
        },
        {
            "name": "leptonica",
            "buildsystem": "autotools",
            "build-options": {
                "env": {
                    "PKG_CONFIG_PATH": "/app/lib/pkgconfig:$PKG_CONFIG_PATH",
                    "CFLAGS": "-I/app/include",
                    "LDFLAGS": "-L/app/lib -ljpeg"
                }
            },
            "config-opts": [
                "--prefix=/app",
                "--with-jpeg",
                "--with-giflib",
                "--with-libpng",
                "--with-libtiff"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/DanBloomberg/leptonica/archive/refs/tags/1.82.0.tar.gz",
                    "sha256": "40fa9ac1e815b91e0fa73f0737e60c9eec433a95fa123f95f2573dd3127dd669"
                }
            ]
        },
        {
            "name": "tesseract",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DSW_BUILD=OFF",
                "-DBUILD_TRAINING_TOOLS=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/tesseract-ocr/tesseract/archive/refs/tags/5.3.0.tar.gz",
                    "sha256": "7e70870f8341e5ea228af2836ce79a36eefa11b01b56177b4a8997f330c014b8"
                }
            ]
        },
        {
            "name": "tesseract-lang-eng",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/tessdata",
                "cp eng.traineddata /app/share/tessdata/"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/tesseract-ocr/tessdata_best/raw/main/eng.traineddata",
                    "sha256": "8280aed0782fe27257a68ea10fe7ef324ca0f8d85bd2fd145d1c2b560bcb66ba"
                }
            ]
        },
        {
            "name": "cargo-sources-generator",
            "buildsystem": "simple",
            "build-commands": [
                "cp -a . /app/cargo-generator",
                "chmod +x /app/cargo-generator/cargo/flatpak-cargo-generator.py"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/flatpak-builder-tools.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "text-extractor",
            "buildsystem": "simple",
            "build-commands": [
                "cd ..",
                "if [ -f Cargo.lock ]; then /app/cargo-generator/cargo/flatpak-cargo-generator.py Cargo.lock -o cargo-sources.json; else cargo generate-lockfile && /app/cargo-generator/cargo/flatpak-cargo-generator.py Cargo.lock -o cargo-sources.json; fi",
                "cd -",
                "cp ../cargo-sources.json .",
                "PKG_CONFIG_PATH=/app/lib/pkgconfig cargo fetch --manifest-path Cargo.toml --verbose",
                "PKG_CONFIG_PATH=/app/lib/pkgconfig RUSTFLAGS=\"-L native=/app/lib\" cargo build --release --verbose",
                "install -Dm755 ./target/release/text-extractor -t /app/bin/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}

